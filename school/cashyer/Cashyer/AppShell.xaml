<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Cashyer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Cashyer"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="Black"
    Shell.TabBarBackgroundColor="Black"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarTitleColor="{StaticResource GradientYellow}"
    BackgroundColor="Black">

	<TabBar>
		<ShellContent
        Title="Home"
        Icon="home_icon.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

		<ShellContent
      Title="Pay"
      Icon="credit_card.png"
      ContentTemplate="{DataTemplate local:PayPage}"
      Route="PayPage"/>

		<ShellContent
      Title="Settings"
      Icon="settings_icon.png"
      ContentTemplate="{DataTemplate local:SettingsPage}"
      Route="SettingsPage"/>
	</TabBar>
</Shell>

